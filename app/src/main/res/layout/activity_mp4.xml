<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<SurfaceView-->
        <!--android:id="@+id/mp4_sfv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <TextureView
        android:id="@+id/mp4_ttv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.joe.camera2recorddemo.View.WheelView.WheelView
        android:id="@+id/mp4_change_fliter"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/filterchoose_backgroud"
        app:wheelItemCount="2"
        app:wheelItemSize="45dp"
        app:wheelDividerSize="0dp"
        app:dividerColor="#00ffffff"
        app:wheelOrientation="horizontal"
        app:wheelTextSize="14sp"
        app:wheelTextColor="#ffffff"
        app:wheelTextColorCenter="#8EE5EE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/editchoose_backgroud"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/mp4_bt_rotation"
            android:onClick="onClick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/mp4_rotation"/>

        <Button
            android:id="@+id/mp4_bt_flip"
            android:onClick="onClick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/mp4_flip"/>

        <Button
            android:id="@+id/mp4_bt_crop"
            android:onClick="onClick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/mp4_crop"/>

        <Button
            android:id="@+id/mp4_bt_save"
            android:onClick="onClick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/mp4_save"/>

    </LinearLayout>

</RelativeLayout>
